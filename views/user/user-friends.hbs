<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Your friends</h1>
            {{#each user.friends}}
            <div class="card" style="width: 25rem;">
                <img class="card-img-top" src="{{profileImg}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{username}}</h5>
                    <a href="/user/{{_id}}">Go to {{username}} profile</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>